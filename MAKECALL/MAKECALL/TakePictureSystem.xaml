<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAKECALL.TakePictureSystem" Background="black">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Button x:Name="BtnTakePicture" Clicked="BtnTakePicture_Clicked" Text="Take Picture" Background="teal" TextColor="White"/>
            <StackLayout  Margin="0,10,0,0"  BackgroundColor="#393434">               
                <Image x:Name="ImgPicture" WidthRequest="300" HeightRequest="450" Margin="2" HorizontalOptions="Center" VerticalOptions="EndAndExpand"  /> 
            </StackLayout>           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>